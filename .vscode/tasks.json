{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start frontend",
            "type": "shell",
            "command": "yarn start",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "start backend",
            "type": "shell",
            "command": "yarn run dev:backend",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Create Build",
            "type": "shell",
            "command": "yarn run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}